<AnchorPane id="AnchorPane" fx:id="parentAnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.overpowered.pijavafx.controllers.authentication.LoginController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/loginbackgound.jpg" />
         </image>
      </ImageView>
      <Hyperlink fx:id="createAccount" layoutX="8.0" layoutY="14.0" onMouseClicked="#createAccountClicked" text="Create Account" />
      <Label layoutX="170.0" layoutY="58.0" opacity="0.67" prefHeight="314.0" prefWidth="305.0" style="-fx-background-color: #212F3C; -fx-background-radius: 30;" />
      <Hyperlink fx:id="forgotPassword" layoutX="239.0" layoutY="304.0" text="Forgot password ?" />
      <JFXPasswordField fx:id="loginPassword" focusColor="WHITE" layoutX="227.0" layoutY="165.0" style="-fx-text-fill: white;" unFocusColor="WHITE">
         <font>
            <Font size="17.0" />
         </font></JFXPasswordField>
      <JFXTextField fx:id="loginUsername" focusColor="WHITE" layoutX="227.0" layoutY="92.0" promptText="Username" style="-fx-text-fill: white;" unFocusColor="WHITE">
         <font>
            <Font size="17.0" />
         </font></JFXTextField>
      <JFXButton fx:id="loginButton" layoutX="274.0" layoutY="234.0" onAction="#create2FAToken" text="Login" textFill="WHITE" />
   </children>
</AnchorPane>
